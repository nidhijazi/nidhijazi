pipeline {
  agent { node { label 'Slave01' } }

   stages {
      stage('Clone Sources') {
        steps {
          checkout scm
        }
	  }  
	  stage('Execute C file') {
        when {
             expression {env.Language == 'All' || env.Language == 'C'}
        }
		steps {
             echo 'Execute C  script'
             sh '''
              chmod 755 ${WORKSPACE}/factorial.c
              gcc factorial.c -o factorial
              ./factorial 
            '''
        }
      } 
      stage('Execute python script') {
        when {
             expression {env.Language == 'All' || env.Language == 'Python'}
        }
		steps {
            echo 'Execute python script'
            sh '''
              chmod 755 ${WORKSPACE}/factorial.py
              python3 factorial.py 
            '''
            
        } 
       }
       stage('Execute bash script') {
        when {
             expression {env.Language == 'All' || env.Language == 'Bash'}
        }
		steps {
            echo 'Execute bash script'
            sh '''
              chmod 755 ${WORKSPACE}/factorial.sh
              ./factorial.sh
            '''
        }
      } 
    }
}
	
	
